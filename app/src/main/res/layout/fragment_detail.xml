<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ishaanmalhi.com.popularmoviesapp.DetailFragment"
    android:orientation="vertical"
    android:background="@color/titleColor"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/movie_title_font_size"
        android:padding="20dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/titleColor"
        android:id="@+id/original_title"
        android:text="Title"
        android:fontFamily="sans-serif-light"
        android:backgroundTint="@color/colorPrimary"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="7"
                android:gravity="center_horizontal|bottom">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:id="@+id/poster_image"
                    android:layout_gravity="left|top"
                    android:padding="@dimen/content_padding"
                    android:contentDescription="@string/detail_image_view_description" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:gravity="center_vertical|bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_rating"
                    android:padding="@dimen/content_padding"
                    android:text="User Rating" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/release_date"
                    android:padding="@dimen/content_padding"
                    android:text="Release Date" />

            </LinearLayout>
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/synopsis"
        android:padding="@dimen/content_padding"
        android:paddingTop="0dp"
        android:text="Synopsis Lots of it. Some more extra stuff"
        android:gravity="center"
        android:layout_gravity="bottom" />

</LinearLayout>
